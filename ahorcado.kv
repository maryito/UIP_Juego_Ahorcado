#:import SlideTransition kivy.uix.screenmanager.SlideTransition
#:import SwapTransition kivy.uix.screenmanager.SwapTransition
#:import WipeTransition kivy.uix.screenmanager.WipeTransition
#:import FadeTransition kivy.uix.screenmanager.FadeTransition
#:import RiseInTransition kivy.uix.screenmanager.RiseInTransition
#:import FallOutTransition kivy.uix.screenmanager.FallOutTransition
#:import NoTransition kivy.uix.screenmanager.NoTransition

<Ventana>:
    sec:sec
    cont:cont
    compo:compo
    pista:pista
    Screen:
        name: "home"
        canvas:
            Rectangle:
                pos: self.pos
                size: self.size
                source: 'data/ini/fondoedi.jpg'
        Image:
            canvas.before:
                Rectangle:
                    pos: self.pos
                    size: self.size
            size_hint: None, None
            size:(300, 100)
            pos_hint:{'center_x': .5,'center_y': .90}
            source: 'logo_uip.png'
        BoxLayout:
            orientation: "vertical"
            pos_hint:{'center_x': .5 , 'center_y': .70}
            size_hint_y: .5
            padding: 25
            Label:
                font_size: 30
                markup: True
                text: ('[b]BIENVENIDO AL JUEGO AHORCADO VERSION UIP[/b]')
                color: (0, 0, 181/255, 0.7)
            BoxLayout
                Button:
                    font_size: 50
                    text:"Seleccione una \nCategor√≠a"
                    background_color: (0, 0, 0/255, 0)
                    color: (0, 0, 0/255, 1)
                BoxLayout:
                    spacing: 10
                    Button:
                        markup: True
                        font_size: 40
                        text:('[b]Carreras[/b]')
                        background_color: (0, 0, 181/255, 0.7)
                        on_press:
                            root.generar_palabra("Carreras")
                            root.current=("model")
                            root.transition= FallOutTransition()
                    Button:
                        markup: True
                        text:('[b]Animales[/b]')
                        font_size: 40
                        background_color: (0, 0, 181/255, 0.7)
                        on_press:
                            root.generar_palabra("Animal")
                            root.current=("model")
                            root.transition= RiseInTransition()
    Screen:
        name: "model"
        canvas:
            Rectangle:
                pos: self.pos
                size: self.size
                source: 'data/ini/fondoedi9.jpg'
        FloatLayout:
            # orientation: "vertical"
            # spacing: 10
            #padding: 35
            Label:
                id: pista
                pos_hint:{"top":1}
                size_hint_y:.1
                text:"BIENVENIDO \n"+ root.categoria
                color:(0, 0, 0/255, 1)
                
            Image:
                id: compo                        
                pos_hint:{"x":0,"y":0.5}   
                size_hint_y: .4

            BoxLayout:
                padding: 10
                id:sec
                size_hint_y: .12               
                pos_hint:{"x":0,"y":0.35}
            GridLayout:
                padding: 30
                id: cont
                orientation: "vertical"
                cols:9
                pos_hint: {'x': 0, "y":0.07}
                size_hint_y: .3
            Button:
                background_normal: "home.png"
                background_down: "home.png"
                size_hint: (None, .09)
                #size: (sp(80), sp(80))
                pos_hint: {'center_x': 0.5}
                on_press:
                    root.current=("home")
                    root.transition= SwapTransition()